@model CRUDMiniProject.Student

@{
    ViewBag.Title = "Students";
}

@if (Model != null)
{
    <h2 class="text-center">Edit Student</h2>
}
else
{
    <h2 class="text-center">Register Student</h2>
}
<h3 class="text-center">@ViewBag.Alert</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                @Html.HiddenFor(model => model.StudentID)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label("StudentName", "Student Name")
                    @Html.EditorFor(model=>model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StudentName, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Age", "Age")
                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.Label("Gender", "Gender")<br />
                    @Html.RadioButtonFor(model => model.Gender, "Male", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.Label("Gender", "Male")
                    @Html.RadioButtonFor(model => model.Gender, "Female", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.Label("Gender", "Female")
                </div>
                <div class="form-group">
                    @Html.Label("PhoneNo", "Phone No")
                    @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNo, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Email", "Email")
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @if (Model != null)
                    {
                        <input type="submit" value="Update" class="btn btn-default" />
                    }
                    else
                    {
                        <input type="submit" value="Register" class="btn btn-default" />
                    }
                    <input type="button" value="View Student List" class="btn btn-default" onclick='window.location.href = "@Url.Action("StudentList", "CRUD", routeValues: null)"' />
                </div>
            </div>
        </div>      
    </div>    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


